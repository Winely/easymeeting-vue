body
  margin 0

a
  text-decoration none
  color inherit

ul
  list-style none
  padding 0

input[type=text],input[type=password],textarea {
  background-color: transparent;
  border: solid 2px rgb(138, 181, 55);
  color: rgb(133, 133, 133);
  font-size: 15px;
  font-weight: 500;
  font-family: '微软雅黑';
  outline: none;
}

input[type=text]:focus,input[type=password]:focus{
  background-color: rgb(167, 193, 88);
  color: white;
}

.submit-button {
  background-color: rgb(138, 181, 55);
  border: solid 2px rgb(138, 181, 55);
  border-radius: 18px;
  height: 28px;
  width: 240px;
  margin: 12px;
  padding: 0;
  color: white;
  font-size: 15px;
  font-weight: 500;
  font-family: '微软雅黑';
  cursor: pointer;
  outline: none;
}
