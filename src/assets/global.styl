theme-color = #8ab537

body
  margin 0
  font-family 'Noto Sans', 'Noto Sans S Chinese DemiLight', '微软雅黑', sans-serif
a
  text-decoration none
  color inherit

ul
  list-style none
  padding 0

input[type=text],input[type=password],textarea {
  background-color: transparent;
  border: solid 2px theme-color;
  color: rgb(133, 133, 133);
  font-size: 15px;
  font-weight: 500;
  outline: none;
  font-family 'Noto Sans', 'Noto Sans S Chinese DemiLight', '微软雅黑', sans-serif
}

input[type=text]:focus,input[type=password]:focus{
  background-color: rgb(167, 193, 88);
  color: white;
}

.submit-button {
  background-color: theme-color;
  border: solid 2px theme-color;
  border-radius: 4px;
  height: 28px;
  width: 240px;
  margin: 12px;
  padding: 0;
  color: white;
  font-size: 15px;
  font-weight: 500;
  cursor: pointer;
  outline: none;
}
